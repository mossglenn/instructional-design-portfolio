---
import Layout from '../layouts/Layout.astro';
import Header from '@components/Header.astro';
import PageSectionNav from '@components/PageSectionNav.astro';
import Hero from '@content/game-based-learning-design/Hero.astro';
import Highlights from '@content/game-based-learning-design/Highlights.astro';
import DesignChallenge from '@content/game-based-learning-design/DesignChallenge.astro';
import DesignSolution from '@content/game-based-learning-design/DesignSolution.astro';
import Results from '@content/game-based-learning-design/Results.astro';
import Footer from '@components/Footer.astro';
---

<Layout>
    <Header /><Hero />
    <PageSectionNav
        sections={[
            {
                id: 'highlights',
                label: { short: 'Highlights', full: 'Project Highlights' },
            },
            {
                id: 'design-challenge',
                label: { short: 'Challenge', full: 'Design Challenge' },
            },
            {
                id: 'design-solution',
                label: { short: 'Solution', full: 'Design Solutions' },
            },
            {
                id: 'results',
                label: { short: 'Games', full: 'The Games' },
            },
        ]}
    />
    <section id="highlights" class="nav-section scroll-mt-24">
        <Highlights />
    </section>
    <section id="design-challenge" class="nav-section scroll-mt-24">
        <DesignChallenge />
    </section>
    <section id="design-solution" class="nav-section scroll-mt-24">
        <DesignSolution />
    </section>
    <section id="results" class="nav-section scroll-mt-24">
        <Results />
    </section>
</Layout><Footer />
