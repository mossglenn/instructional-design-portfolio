---
import Layout from '../layouts/Layout.astro';
import Header from '@components/Header.astro';

import Footer from '@components/Footer.astro';
---

<Layout>
    <Header />
    <section class="max-w-screen-xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Contact Me</h1>
        <p class="mb-4 text-neutral-600">
            If you have any questions, feedback, or just want to say hello, feel
            free to reach out!
        </p>
        <form
            action="https://formspree.io/f/movlqpeo"
            class="w-full grid md:grid-cols-2 gap-6"
            target="_top"
            method="POST"
        >
            <div class="flex flex-col gap-2">
                <label class="text-base font-medium text-neutral-700" for="name"
                    >Your Name</label
                >
                <input
                    class="h-12 rounded-xl border border-neutral-500 px-4 text-base text-neutral-900 focus:outline-none focus:ring-2 focus:ring-tertiary-500"
                    id="name"
                    name="name"
                    required
                />
            </div>
            <div class="flex flex-col gap-2">
                <label
                    class="text-base font-medium text-neutral-700"
                    for="email">Email</label
                >
                <input
                    class="h-12 rounded-xl border border-neutral-500 px-4 text-base text-neutral-700 focus:outline-none focus:ring-2 focus:ring-tertiary-500"
                    id="email"
                    name="email"
                    required
                />
                <p class="text-sm text-neutral-600">
                    This will help me respond to your query via an email.
                </p>
            </div>
            <div class="flex flex-col gap-2 md:col-span-2">
                <label
                    class="text-base font-medium text-neutral-700"
                    for="message">Message</label
                >
                <textarea
                    class="min-h-[120px] rounded-lg border border-neutral-500 px-4 py-2 text-base text-neutral-700 focus:outline-none focus:ring-2 focus:ring-tertiary-500 resize-vertical"
                    id="message"
                    name="message"
                    required></textarea>
                <p class="text-sm text-neutral-600">
                    What would you like to discuss?
                </p>
            </div>
            <div
                class="flex
                    justify-end
                    md:col-span-2"
            >
                <button
                    class="bg-primary-500 text-neutral-100 font-semibold text-lg px-6 py-3 rounded-full hover:bg-accent-700 focus:outline-none focus:ring-4 focus:ring-primary-500 transition-all"
                    type="submit"
                >
                    Submit
                </button>
            </div>
        </form>
    </section>
</Layout>
<Footer />
