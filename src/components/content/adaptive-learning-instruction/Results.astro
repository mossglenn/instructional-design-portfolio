---
import ScientistIcon from '@assets/scientist-icon-color-frames.svg';
import HandbookCover from '@assets/portfolio/handbook-2-cover.jpg';
import PenAndWrench from '@assets/pen-and-wrench.svg';
import { Image } from 'astro:assets';

import AccomplishedIcon from '@assets/accomplished-color-flat.svg';
import RetakeIcon from '@assets/retake-icon-swoosh.svg';
import ExternalLink from '@/components/ExternalLink.astro';
import Result from '@components/Result.astro';

type Stat = {
  icon: any;
  value: string;
  label: string;
  description: string;
};

const learnerstat: Stat = {
  icon: ScientistIcon,
  value: '10K+',
  label: 'Learners',
  description:
    'Since 2020, 21K+ researchers have been given access to the course as part of their application to access All of Us data. About half of all applicants have become engaged learners.',
};
const results: Stat[] = [
  {
    icon: ScientistIcon,
    value: '10K+',
    label: 'Learners',
    description:
      'Since 2020, 21K+ researchers have been given access to the course as part of their application to access All of Us data. About half of all applicants have become engaged learners.',
  },
  {
    icon: AccomplishedIcon,
    value: '98%',
    label: 'Completion',
    description:
      'Of those who engaged with the course, almost all completed the course and passed the rigorous final assessment.',
  },
  {
    icon: RetakeIcon,
    value: 'Only 4',
    label: 'Retakes (0.05%)',
    description:
      "Only 4 of the 9023 learners who completed the course between 2020 and 2024 were required to retake it due to policy violations: strong evidence of the course's lasting impact.",
  },
];
---

<!-- results -->
<section
  class="project-results pt-6 pb-12 px-4 mx-2 my-4 m-auto border rounded-lg shadow-sm bg-neutral-100"
>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <h3
        class="text-2xl font-extrabold tracking-wide text-neutral-900 pb-6 px-2"
      >
        Why It Matters
      </h3>
      <div
        class="flex flex-row-reverse items-center gap-8 mb-8 rounded-lg shadow-sm ring bg-card-bg ring-neutral-100 px-6 py-4"
      >
        <ScientistIcon
          class="w-12 h-12 flex-shrink-0"
          style="color: var(--color-accent-100); --icon-subject-color: var(--color-accent-100); --icon-field-color: var(--color-primary-800);"
        />
        <div>
          This chapter contributes to the <span class="font-bold"
            >scientific foundation of adaptive learning</span
          >, offering guidance on how to design, implement, and refine adaptive
          learning technologies based on evidence-based research.
        </div>
      </div>
      <div
        class="flex flex-row items-center gap-8 mb-8 rounded-lg shadow-sm ring bg-card-bg ring-neutral-100 px-6 py-4"
      >
        <PenAndWrench
          class="w-12 h-12 flex-shrink-0"
          style="--icon-accent-color: var(--color-secondary-400); --icon-subject-color: var(--color-secondary-400); --icon-field-color: var(--color-primary-800);"
        />
        <div>
          It <span class="font-bold">complements my hands-on work</span> in adaptive
          learning by <span class="font-bold"
            >demonstrating thought leadership</span
          > in the field and a deep understanding of the theoretical foundations
          of instructional adaptation.
        </div>
      </div>
    </div>

    <div>
      <h3
        class="text-2xl font-extrabold tracking-wide text-neutral-900 pb-6 px-2"
      >
        Where to Read It
      </h3>
      <div class="flex items-center gap-4">
        <a
          class="w-1/3 pl-4"
          href="https://www.taylorfrancis.com/books/edit/10.4324/9781315736419/handbook-research-learning-instruction-patricia-alexander-richard-mayer"
        >
          <Image
            src={HandbookCover}
            alt="Cover image for the Responsible Conduct of Research Part 2 course"
            class="w-full shadow-lg"
            loading="lazy"
          /></a
        >
        <ExternalLink
          url="https://www.taylorfrancis.com/books/edit/10.4324/9781315736419/handbook-research-learning-instruction-patricia-alexander-richard-mayer"
          label="The Handbook of Research on Learning and Instruction, 2nd Edition (published by Routledge)"
        />
      </div>
    </div>
  </div>
</section>
