---
import { Image } from 'astro:assets';
import EscapeRoom1 from '@assets/portfolio/escape-room/escape-room-1.png';
import EscapeRoom4 from '@assets/portfolio/escape-room/escape-room-4.png';
import EscapeRoom5 from '@assets/portfolio/escape-room/escape-room-5.png';
import EscapeRoom9 from '@assets/portfolio/escape-room/escape-room-9.png';
import ZooTreasure1 from '@assets/portfolio/zoo-treasure/zoo-treasure-1.jpg';
import ZooTreasure2 from '@assets/portfolio/zoo-treasure/zoo-treasure-2.jpg';
import ZooTreasure7 from '@assets/portfolio/zoo-treasure/zoo-treasure-7.jpg';
import ZooTreasure15 from '@assets/portfolio/zoo-treasure/zoo-treasure-15.jpg';
import ZooTreasure22 from '@assets/portfolio/zoo-treasure/zoo-treasure-22.jpg';

const images = [
  EscapeRoom1,
  EscapeRoom4,
  EscapeRoom5,
  EscapeRoom9,
  ZooTreasure1,
  ZooTreasure2,
  ZooTreasure7,
  ZooTreasure15,
  ZooTreasure22,
];
---

<style>
  .carousel-container {
    position: relative;
    width: 100%;
    background: var(--color-neutral-800);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border: var(--color-neutral-800) 1px solid;
  }

  .carousel-slide {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    z-index: 0;
    pointer-events: none;
  }

  .carousel-slide.active {
    opacity: 1;
    z-index: 1;
    pointer-events: auto;
  }

  .modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 50;
  }
  .modal.open {
    display: flex;
  }

  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .dot {
    width: 10px;
    height: 10px;
    background-color: #aaa;
    border-radius: 9999px;
    transition: background-color 0.3s;
  }

  .dot.active {
    background-color: var(--color-primary-700);
  }
</style>

<div class="w-full h-auto flex-grow max-w-xs">
  <div class="carousel-container" id="carousel" style="aspect-ratio: 4 / 3;">
    {
      images.map((src, idx) => (
        <div
          class={`carousel-slide${idx === 0 ? ' active' : ''}`}
          data-index={idx}
        >
          <Image
            src={src}
            alt={`Slide ${idx + 1}`}
            class="w-full h-auto max-h-full object-contain cursor-pointer rounded-lg"
            style="background:black;"
          />
        </div>
      ))
    }
  </div>
  <div class="carousel-dots">
    {
      images.map((_, idx) => (
        <div class={`dot${idx === 0 ? ' active' : ''}`} data-dot-index={idx} />
      ))
    }
  </div>
</div>

<div id="modal" class="modal">
  <img id="modal-img" class="max-w-full max-h-full rounded" />
  <div class="absolute bottom-4 flex gap-4">
    <button id="modal-prev" class="px-3 py-1 bg-white rounded">Previous</button>
    <button id="modal-next" class="px-3 py-1 bg-white rounded">Next</button>
  </div>
</div>

<script type="module">
  let current = 0;
  const slides = () => document.querySelectorAll('.carousel-slide');

  const updateDots = (index) => {
    document.querySelectorAll('.dot').forEach((dot, i) => {
      dot.classList.toggle('active', i === index);
    });
  };

  const showSlide = (index) => {
    slides().forEach((slide, i) => {
      slide.classList.toggle('active', i === index);
    });
    updateDots(index);
  };

  let intervalId = setInterval(nextSlide, 2000);

  function nextSlide() {
    current = (current + 1) % slides().length;
    showSlide(current);
  }

  function restartInterval(delay = 6000) {
    clearInterval(intervalId);
    intervalId = setTimeout(() => {
      intervalId = setInterval(nextSlide, 2500);
    }, delay);
  }
  // Dot navigation click
  document.querySelectorAll('.dot').forEach((dot) => {
    dot.addEventListener('click', (e) => {
      const idx = Number(dot.getAttribute('data-dot-index'));
      current = idx;
      showSlide(current);
      restartInterval();
    });
  });

  document.querySelectorAll('.carousel-slide').forEach((slide) => {
    slide.addEventListener('click', () => {
      const img = slide.querySelector('img');
      const modal = document.getElementById('modal');
      const modalImg = document.getElementById('modal-img');
      modalImg.src = img.src;
      modal.classList.add('open');
    });
  });

  document.getElementById('modal')?.addEventListener('click', () => {
    document.getElementById('modal')?.classList.remove('open');
  });

  document.getElementById('modal-prev')?.addEventListener('click', (e) => {
    e.stopPropagation();
    current = (current - 1 + slides().length) % slides().length;
    updateModalImage();
  });

  document.getElementById('modal-next')?.addEventListener('click', (e) => {
    e.stopPropagation();
    current = (current + 1) % slides().length;
    updateModalImage();
  });

  function updateModalImage() {
    const src = slides()[current].querySelector('img')?.src;
    const modalImg = document.getElementById('modal-img');
    if (src && modalImg) modalImg.src = src;
  }
</script>
