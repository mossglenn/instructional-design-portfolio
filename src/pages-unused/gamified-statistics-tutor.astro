---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Highlights from '../components/Highlights.astro';
import DetailsContent from '../components/DetailsContent.astro';
import 'flowbite';

import '../styles/global.css';
import DetailsTypography from '../components/DetailsTypography.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gamified Statistics Tutor | Instructional Design Portfolio</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <Header />

    <main class="container mx-auto my-12 space-y-20">
      <section id="highlights">
        <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
          Project Highlights
        </h2>
        <Highlights />
      </section>

      <DetailsTypography />

      <section id="details">
        <DetailsContent />
      </section>

      <section id="gallery" class="py-16 bg-gray-100">
        <h2
          class="text-2xl font-semibold text-center mb-6 text-gray-700 uppercase tracking-wider"
        >
          Image Gallery
        </h2>
      </section>

      <section id="contact" class="py-16 bg-white">
        <h2
          class="text-2xl font-semibold text-center mb-6 text-gray-700 uppercase tracking-wider"
        >
          Contact Information
        </h2>
      </section>
    </main>

    <Footer />
    <script>
      import 'flowbite/dist/flowbite.min.js'; // âœ… Initialize the JS part
    </script>
  </body>
</html>
